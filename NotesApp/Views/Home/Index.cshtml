@model List<NotesApp.Models.Note>

@{
    ViewData["Title"] = "Notes";
}

<h2>Notes</h2>

<!-- Кнопка для відкриття модального вікна створення -->
<button class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#createModal">Add Note</button>

<!-- Таблиця нотаток -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Reminder At</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            <tr>
                <td>@note.Title</td>
                <td>@note.Content</td>
                <td>@note.CreatedAt.ToString("g")</td>
                <td>@(note.ReminderAt?.ToString("g"))</td>
                <td>
                    <!-- Кнопка для відкриття модального вікна редагування -->
                    <button class="btn btn-sm btn-secondary" data-bs-toggle="modal" data-bs-target="#editModal-@note.Id">Edit</button>
                    
                    <!-- Кнопка для видалення з підтвердженням -->
                    <form asp-controller="Notes" asp-action="Delete" method="post" class="d-inline" 
                          onsubmit="return confirm('Are you sure you want to delete this note?');">
                        <input type="hidden" name="id" value="@note.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Модальне вікно для створення -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Notes" asp-action="Create" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="createModalLabel">Create Note</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="Title" class="form-label">Title*</label>
                        <input type="text" name="Title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="Content" class="form-label">Content</label>
                        <textarea name="Content" class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="ReminderAt" class="form-label">Reminder Time</label>
                        <input type="datetime-local" name="ReminderAt" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Модальні вікна для редагування кожної нотатки -->
@foreach (var note in Model)
{
    <div class="modal fade" id="editModal-@note.Id" tabindex="-1" aria-labelledby="editModalLabel-@note.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-controller="Notes" asp-action="Edit" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel-@note.Id">Edit Note</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@note.Id" />
                        <div class="mb-3">
                            <label for="title-@note.Id" class="form-label">Title*</label>
                            <input type="text" name="title" id="title-@note.Id" class="form-control" value="@note.Title" required />
                        </div>
                        <div class="mb-3">
                            <label for="content-@note.Id" class="form-label">Content</label>
                            <textarea name="content" id="content-@note.Id" class="form-control">@note.Content</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="reminderAt-@note.Id" class="form-label">Reminder Time</label>
                            <input type="datetime-local" name="reminderAt" id="reminderAt-@note.Id" class="form-control" 
                                   value="@(note.ReminderAt?.ToString("yyyy-MM-ddTHH:mm"))" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}