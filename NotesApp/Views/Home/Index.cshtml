@model List<NotesApp.Models.Note>

@{
    ViewData["Title"] = "Notes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">My Notes</h1>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        <i class="bi bi-plus-lg"></i> Add Note
    </button>
</div>

<div class="notes-grid">
    @foreach (var note in Model)
    {
        <div class="card note-card">
            <div class="card-body">
                @if (note.ReminderAt.HasValue)
                {
                    <span class="note-reminder">
                        <i class="bi bi-alarm"></i> @note.ReminderAt?.ToString("g")
                    </span>
                }
                <h5 class="card-title">@note.Title</h5>
                <p class="card-text">@note.Content</p>
                <div class="text-muted small mb-2">
                    Created: @note.CreatedAt.ToString("g")
                </div>
                <div class="note-actions">
                    <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#editModal-@note.Id">
                        <i class="bi bi-pencil"></i> Edit
                    </button>
                    <form asp-controller="Notes" asp-action="Delete" method="post" 
                          onsubmit="return confirm('Are you sure you want to delete this note?');">
                        <input type="hidden" name="id" value="@note.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<!-- Модальне вікно для створення -->
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Note</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Notes" asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title*</label>
                        <input type="text" name="Title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Content</label>
                        <textarea name="Content" class="form-control" rows="4"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Set Reminder</label>
                        <input type="datetime-local" name="ReminderAt" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Note</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Модальні вікна для редагування -->
@foreach (var note in Model)
{
    <div class="modal fade" id="editModal-@note.Id" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Note</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-controller="Notes" asp-action="Edit" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@note.Id" />
                        <div class="mb-3">
                            <label class="form-label">Title*</label>
                            <input type="text" name="title" class="form-control" value="@note.Title" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Content</label>
                            <textarea name="content" class="form-control" rows="4">@note.Content</textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Update Reminder</label>
                            <input type="datetime-local" name="reminderAt" class="form-control" 
                                   value="@(note.ReminderAt?.ToString("yyyy-MM-ddTHH:mm"))" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Автоматичне закриття модального вікна після успішного сабміту форми
        $(document).ready(function() {
            $('form').on('submit', function() {
                $(this).closest('.modal').modal('hide');
            });
        });
    </script>
}